<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterToolFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/herramientas_varias_wallpaper_preview"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/formRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textColor="#fff"
            android:gravity="center"
            android:translationY="-50dp" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:background="@drawable/background_register"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="91dp"
                android:contentDescription="@string/imageTool"

                tools:src="@tools:sample/avatars" />

            <EditText
                android:id="@+id/nameToolRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="Destornillador"
                android:background="@drawable/edge_layout"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:hint="@string/tool"
                android:inputType="text"
                android:textColor="#fff"
                android:textColorHint="#fff" />

            <EditText
                android:id="@+id/descriptionToolRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:hint="@string/description"
                android:background="@drawable/edge_layout"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:inputType="text"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:autofillHints="DescripciÃ³n" />

            <EditText
                android:id="@+id/priceToolRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:hint="@string/price"
                android:background="@drawable/edge_layout"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:inputType="number"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:autofillHints="0" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addRegister"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:clickable="true"
                android:contentDescription="@string/addTool"
                android:src="@android:drawable/ic_input_add"
                android:tint="#000000"
                android:translationX="-70dp"
                android:translationY="24dp"
                app:backgroundTint="#CC18CA1F"
                app:rippleColor="#000000" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/cancelRegister"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:clickable="true"
                android:contentDescription="@string/cancelRegister"
                android:src="@android:drawable/button_onoff_indicator_on"
                android:tint="#000000"
                android:translationX="70dp"
                android:translationY="-30dp"
                app:backgroundTint="#CCFFB300" />
        </LinearLayout>

    </LinearLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>