<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterToolFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/herramientas_varias_wallpaper_preview"
        android:scaleType="centerCrop"
        android:contentDescription="@string/descriptionImagen" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/formRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="@string/register"
            android:textColor="#fff"
            android:textSize="20sp"
            android:gravity="center"
            android:translationY="50dp"/>

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="577dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/background_register"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="138dp"
                android:layout_height="116dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/imageTool"
                tools:src="@drawable/baseline_add_photo"/>

            <EditText
                android:id="@+id/nameToolRegister"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="Destornillador"
                android:background="@drawable/edge_layout"
                android:hint="@string/tool"
                android:drawableStart="@drawable/baseline_tool"
                android:drawablePadding="5dp"
                android:inputType="text"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:textColor="#fff"
                android:textColorHint="#fff" />

            <EditText
                android:id="@+id/descriptionToolRegister"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="DescripciÃ³n"
                android:background="@drawable/edge_layout"
                android:hint="@string/description"
                android:drawableStart="@drawable/baseline_insert"
                android:drawablePadding="5dp"
                android:inputType="text"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:textColor="#fff"
                android:textColorHint="#fff" />

            <EditText
                android:id="@+id/priceToolRegister"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="0"
                android:background="@drawable/edge_layout"
                android:hint="@string/price"
                android:drawableStart="@drawable/baseline_attach_money"
                android:drawablePadding="5dp"
                android:inputType="number"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:textColor="#fff"
                android:textColorHint="#fff" />

            <EditText
                android:id="@+id/countToolRegister"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="0"
                android:background="@drawable/edge_layout"
                android:hint="@string/count"
                android:drawableStart="@drawable/baseline_numbers"
                android:drawablePadding="5dp"
                android:inputType="number"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:textColor="#fff"
                android:textColorHint="#fff" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addRegister"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:clickable="true"
                android:contentDescription="@string/addTool"
                android:src="@android:drawable/ic_input_add"
                android:tint="#000000"
                android:translationX="-70dp"
                android:translationY="24dp"
                app:backgroundTint="#CC18CA1F"
                app:rippleColor="#000000" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/cancelRegister"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:clickable="true"
                android:contentDescription="@string/cancelRegister"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="#000000"
                android:translationX="70dp"
                android:translationY="-30dp"
                app:backgroundTint="#F44336" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>