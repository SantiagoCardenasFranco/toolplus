<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/oneLineTool">

    <ImageView
        android:id="@+id/imageToolUser"
        android:layout_width="88dp"
        android:layout_height="82dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="9dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameToolUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageToolUser"
        app:layout_constraintStart_toStartOf="@+id/imageToolUser"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/countUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageToolUser"
        app:layout_constraintTop_toBottomOf="@+id/nameToolUser" />

    <TextView
        android:id="@+id/priceUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageToolUser"
        app:layout_constraintTop_toBottomOf="@+id/countUser" />

    <TextView
        android:id="@+id/descriptionUser"
        android:layout_width="116dp"
        android:layout_height="34dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:translationX="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/countUser"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/divider2"
        android:layout_width="415dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@+id/priceUser"
        tools:layout_editor_absoluteX="1dp" />



</androidx.constraintlayout.widget.ConstraintLayout>