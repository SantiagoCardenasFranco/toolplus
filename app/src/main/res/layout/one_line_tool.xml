<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/oneLineTool">


    <ImageView
        android:id="@+id/imageTool"
        android:layout_width="88dp"
        android:layout_height="82dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="9dp"
        tools:srcCompat="@tools:sample/avatars"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/nameTool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageTool"
        app:layout_constraintStart_toStartOf="@+id/imageTool"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description"
        android:layout_width="95dp"
        android:layout_height="81dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageTool"
        app:layout_constraintStart_toStartOf="@+id/imageTool"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageTool"
        app:layout_constraintTop_toBottomOf="@+id/nameTool" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageTool"
        app:layout_constraintTop_toBottomOf="@+id/count" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="TODO"
        android:src="@drawable/baseline_delete"
        android:translationX="8dp"
        android:translationY="10dp"
        android:text="Eliminar"
        app:backgroundTint="#DC190B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/material_on_background_emphasis_high_type" />


    <Button
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/baseline_edit"
        android:text="Editar"
        android:translationX="-9dp"
        android:translationY="-30dp"
        app:backgroundTint="#673AB7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/material_on_background_emphasis_high_type"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>