<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    tools:context=".PreBill">
    <!-- El codigo del fondo siempre va primero -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/herramientas_varias_wallpaper_preview"
        android:scaleType="centerCrop"
        android:contentDescription="@string/descriptionImagen" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:gravity="center"
        android:textAlignment="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp">

        <TextView
            android:id="@+id/tittle"
            android:layout_width="374dp"
            android:layout_height="43dp"
            android:text="Prefactura "
            android:textColor="@color/white"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="21dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/TextnumberOfToolsPreBill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numeros de herramientas"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/toolDescriptionPreBill"
            android:layout_width="345dp"
            android:layout_height="47dp"
            android:text="Descripcion Herramienta"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/toolPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio de Herramienta"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/fullValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor total"
            android:textColor="@color/white" />


        <EditText
            android:id="@+id/numberOfDays"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:hint="@string/days"
            android:textColor="#fff"
            android:textColorHint="#fff"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="445dp" />

        <TextView
            android:id="@+id/fullValueOfTool"
            android:layout_width="166dp"
            android:layout_height="38dp"
            android:text="Valor de dias de herramienta"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="203dp"
            tools:layout_editor_absoluteY="445dp" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/design_default_color_secondary_variant"
            android:text="Volver"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="538dp" />

        <Button
            android:id="@+id/ContinueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/design_default_color_secondary_variant"
            android:text="Continuar"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="275dp"
            tools:layout_editor_absoluteY="538dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
