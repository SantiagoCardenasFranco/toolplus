<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    tools:context=".ToolDescription">
<!-- El codigo del fondo siempre va primero -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/herramientas_varias_wallpaper_preview"
        android:scaleType="centerCrop"
        android:background="#80000000"
        android:contentDescription="@string/descriptionImagen" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/toolName"
            android:layout_width="374dp"
            android:layout_height="43dp"
            android:text="Nombre de herramienta"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="21dp"
            tools:layout_editor_absoluteY="16dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ToolImage"
            android:layout_width="164dp"
            android:layout_height="129dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_add_photo"
            app:shapeAppearanceOverlay="@style/roundImageView"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="123dp"
            tools:layout_editor_absoluteY="73dp" />

        <TextView
            android:id="@+id/toolPrice"
            android:layout_width="134dp"
            android:layout_height="42dp"
            android:text="Precio de Herramienta"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="224dp"
            tools:layout_editor_absoluteY="219dp" />

        <TextView
            android:id="@+id/TextnumberOfDays"
            android:layout_width="104dp"
            android:layout_height="42dp"
            android:text="Numero de dias"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="218dp" />

        <TextView
            android:id="@+id/toolDescription"
            android:layout_width="327dp"
            android:layout_height="143dp"
            android:text="Descripcion Herramienta"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="277dp" />

        <EditText
            android:id="@+id/numberOfDays"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:hint="@string/days"
            android:inputType="number"
            android:textColor="#fff"
            android:textColorHint="#fff"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="445dp" />



        <TextView
            android:id="@+id/fullValueOfTool"
            android:layout_width="166dp"
            android:layout_height="38dp"
            android:text="Valor de dias de herramienta"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="203dp"
            tools:layout_editor_absoluteY="445dp" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/design_default_color_secondary_variant"
            android:text="Volver"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="538dp" />

        <Button
            android:id="@+id/ContinueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/design_default_color_secondary_variant"
            android:text="Continuar"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="275dp"
            tools:layout_editor_absoluteY="538dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>