<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    tools:context=".ToolDescription">


    <TextView
        android:id="@+id/toolJame"
        android:layout_width="374dp"
        android:layout_height="43dp"
        android:text="Nombre de herramienta"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/ToolImage"
        android:layout_width="164dp"
        android:layout_height="129dp"
        android:src="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="73dp" />

    <TextView
        android:id="@+id/toolDescription"
        android:layout_width="327dp"
        android:layout_height="143dp"
        android:text="Descripcion Herramienta"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="247dp" />

    <EditText
        android:layout_width="118dp"
        android:layout_height="35dp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="434dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="166dp"
        android:layout_height="38dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="434dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="497dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="496dp" />

    <TextView
        android:id="@+id/toolPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PrecioHerramienta"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="212dp" />

</androidx.constraintlayout.widget.ConstraintLayout>