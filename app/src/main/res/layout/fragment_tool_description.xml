<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/toolDescriptionUser"
    android:layout_height="match_parent"
    android:background="#80000000"
    tools:context=".ToolDescription">
<!-- El codigo del fondo siempre va primero -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:contentDescription="@string/descriptionImagen"
        android:scaleType="centerCrop"
        android:src="@mipmap/herramientas_varias_wallpaper_preview"
        tools:layout_editor_absoluteX="-35dp"
        tools:layout_editor_absoluteY="0dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="-35dp">

    <TextView
        android:id="@+id/toolName"
        android:layout_width="374dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="Nombre de herramienta"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="0dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ToolImage"
            android:layout_width="146dp"
            android:layout_height="130dp"
            android:background="@drawable/edge_layout_2"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_add_photo"
            app:shapeAppearanceOverlay="@style/roundImageView"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="123dp"
            tools:layout_editor_absoluteY="52dp" />

        <TextView
            android:id="@+id/toolDescription"
            android:layout_width="295dp"
            android:layout_height="117dp"
            android:background="@drawable/stylo_bordes"
            android:text="Descripcion Herramienta"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="195dp" />

        <TextView
            android:id="@+id/TextTenemos"
            android:layout_width="83dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="Tenemos"
            android:textColor="@color/white"
            android:translationX="-100dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="21dp"
            tools:layout_editor_absoluteY="378dp" />

        <TextView
            android:id="@+id/textPriceTool"
            android:layout_width="104dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="El Precio es de:"
            android:textColor="@color/white"
            android:translationX="-110dp"
            android:translationY="15dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="21dp"
            tools:layout_editor_absoluteY="433dp" />

        <TextView
            android:id="@+id/toolPrice"
            android:layout_width="104dp"
            android:layout_height="24dp"
            android:background="@drawable/edge_layout"
            android:gravity="center"
            android:text="$$$$"
            android:textColor="@color/white"
            android:translationY="-7dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="433dp" />

        <TextView
            android:id="@+id/textForDay"
            android:layout_width="64dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="Por Dia"
            android:textColor="@color/white"
            android:translationX="100dp"
            android:translationY="-30dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="237dp"
            tools:layout_editor_absoluteY="433dp" />

        <TextView
            android:id="@+id/TextNumberOfTools"
            android:layout_width="48dp"
            android:layout_height="25dp"
            android:background="@drawable/edge_layout"
            android:gravity="center"
            android:text="#"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:translationX="-20dp"
            android:translationY="-94dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="378dp" />

        <TextView
            android:id="@+id/TextUnitsAvaiable"
            android:layout_width="197dp"
            android:layout_height="29dp"
            android:gravity="center"
            android:text="Unidades disponibles"
            android:textColor="@color/white"
            android:translationX="100dp"
            android:translationY="-122dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="169dp"
            tools:layout_editor_absoluteY="378dp" />


        <EditText
            android:id="@+id/numberOfDaysDescription"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:hint="Dias de alquiler"
            android:inputType="number"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:translationX="-80dp"
            android:translationY="-60dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="483dp" />

        <TextView
            android:id="@+id/fullValueOfTool"
            android:layout_width="166dp"
            android:layout_height="38dp"
            android:background="@drawable/edge_layout_2"
            android:gravity="center"
            android:text="Valor total"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:translationX="80dp"
            android:translationY="-100dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="210dp"
            tools:layout_editor_absoluteY="484dp" />

        <Button
            android:id="@+id/backButtonDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FD0724"
            android:text="Volver"
            android:translationX="-70dp"
            android:translationY="-50dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="538dp" />

        <Button
            android:id="@+id/ContinueButtonDescription"
            android:layout_width="158dp"
            android:layout_height="38dp"
            android:backgroundTint="@color/dark_green"
            android:text="Continuar"
            android:translationX="70dp"
            android:translationY="-95dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="538dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>