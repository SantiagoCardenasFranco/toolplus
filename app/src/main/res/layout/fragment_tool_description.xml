<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/toolDescriptionUser"
    android:layout_height="match_parent"
    android:background="#80000000"
    tools:context=".ToolDescription">
<!-- El codigo del fondo siempre va primero -->





    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:contentDescription="@string/descriptionImagen"
        android:scaleType="centerCrop"
        android:src="@mipmap/herramientas_varias_wallpaper_preview"
        tools:layout_editor_absoluteX="-35dp"
        tools:layout_editor_absoluteY="0dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="-35dp"/>

    <TextView
        android:id="@+id/toolName"
        android:layout_width="374dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="Nombre de herramienta"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="0dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ToolImage"
        android:layout_width="164dp"
        android:layout_height="129dp"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_add_photo"
        app:shapeAppearanceOverlay="@style/roundImageView"
        tools:ignore="MissingConstraints"
        android:background="@drawable/edge_layout_2"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="52dp" />

    <TextView
        android:id="@+id/textPrice"
        android:layout_width="104dp"
        android:layout_height="24dp"
        android:text="El Precio es de:"
        android:textColor="@color/white"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="433dp" />

    <TextView
        android:id="@+id/toolPrice"
        android:layout_width="104dp"
        android:layout_height="24dp"
        android:text="$$$$"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints"
        android:gravity="center"
        android:background="@drawable/edge_layout"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="433dp" />

    <TextView
        android:id="@+id/textForDay"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:text="Por Dia"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="433dp" />

    <TextView
        android:id="@+id/TextTenemos"
        android:layout_width="83dp"
        android:layout_height="24dp"
        android:text="Tenemos"
        android:textColor="@color/white"
        android:gravity="center"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="378dp" />

    <TextView
        android:id="@+id/TextNumberOfTools"
        android:layout_width="48dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="#"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        android:background="@drawable/edge_layout"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="378dp" />

    <TextView
        android:id="@+id/TextUnitsAvaiable"
        android:layout_width="197dp"
        android:layout_height="29dp"
        android:gravity="center"
        android:text="Unidades disponibles"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="378dp" />

    <TextView
        android:id="@+id/toolDescription"
        android:layout_width="341dp"
        android:layout_height="168dp"
        android:text="Descripcion Herramienta"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints"
        android:background="@drawable/stylo_bordes"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="195dp" />


    <EditText
        android:id="@+id/numberOfDays"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:hint="Dias de alquiler"
        android:inputType="number"
        android:textColor="#fff"
        android:textColorHint="#fff"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="483dp" />

    <TextView
        android:id="@+id/fullValueOfTool"
        android:layout_width="166dp"
        android:layout_height="38dp"
        android:text="Valor total"
        android:gravity="center"
        android:background="@drawable/edge_layout_2"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="210dp"
        tools:layout_editor_absoluteY="484dp" />

    <Button
            android:id="@+id/backButtonDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FD0724"
            android:text="Volver"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="538dp" />

        <Button
            android:id="@+id/ContinueButtonDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_green"
            android:text="Continuar"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="275dp"
            tools:layout_editor_absoluteY="538dp" />


</androidx.constraintlayout.widget.ConstraintLayout>